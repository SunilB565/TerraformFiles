kms_alias   = "my-shared-kms-key"
main.tf
h
Copy
Edit
provider "aws" {
  region = "us-east-1"
}

module "kms_key" {
  source     = "./modules/kms_key"
  alias_name = var.kms_alias
}

module "s3_bucket" {
  source       = "./modules/s3_bucket"
  bucket_name  = var.bucket_name
  kms_key_arn  = module.kms_key.kms_key_arn
}



